<?xml version="1.0" ?>
<robot name="sliding_column">

  <link name="base">
    <visual>
      <geometry>
        <cylinder length="1.5" radius="0.15"/> 
      </geometry>
      <material name="column_colour">
        <color rgba="0.7 0.7 0.2 1"/> 
      </material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="1.5" radius="0.15"/> 
      </geometry>
    </collision>
    
    <!-- The mass is set to zero!  -->

    <inertial>
      <mass value="0"/> 
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/> 
    </inertial>
  </link>

</robot>

